@model LimeResume.Models.Resume
@{
    Layout = null;

    //award должен иметь вид "первая награда, вторая награда, третья, четвертая"
    //skills должен иметь вид "название-проценты, название-проценты, название-проценты"
    var awardList = new string[0];
    if (Model.Awards != null)
        awardList = Model.Awards.Split(", ");


    var skillsmatrix = new List<string[]>();
    if (Model.Skills != null)
    {
        var skills = Model.Awards.Split(", ").ToList();
        foreach (var item in skills)
            skillsmatrix.Add(item.Split("-"));
    }
}

