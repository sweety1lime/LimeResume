@model List<LimeResume.Models.Company>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ShowBase</title>
    <link rel="stylesheet" href="/css/main/style.css">
    <link href="~/css/main/styleSlider.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Heebo:400,700|Playfair+Display:700" rel="stylesheet">
    <script src="https://unpkg.com/scrollreveal@4.0.5/dist/scrollreveal.min.js"></script>
</head>
<body class="is-boxed has-animations" style="background: #191d21;">
    <div class="body-wrap boxed-container">
        <header class="site-header text-light">
            <div class="container">
                <div class="site-header-inner">
                    <div class="brand header-brand">
                        <h1 class="m-0">
                            <a href="@Url.Action("Index")">
                                <img class="header-logo-image" src="/Images/svg/logo.svg" alt="Logo">
                            </a>
                        </h1>

                    </div>
                    <h1 class="m-0" style="float:right !important;">
                        <a class="button button-primary button-wide-mobile" href="@Url.Action("RegAuth")">Вход</a>
                    </h1>
                </div>

            </div>
        </header>

        <main style="background: #191d21;">
            <section style="background: #191d21;" class="features-extended section">
                <div class="features-extended-inner section-inner">
                    <div class="features-extended-header text-center">
                        <div class="container-sm">
                            <h2 class="section-title mt-0">Базы практик</h2>
                            <p class="section-paragraph">Московский Приборостроительный техникум сотрудничает с лучшими организациями в IT-индустрии. Среди наших партеров есть следующие компании</p>
                        </div>
                    </div>
                    <div class="features-extended-wrap">
                        <div class="container" id="block1">
                            @foreach (var item in Model)
                            {
                                <div class="feature-extended">
                                    <div class="feature-extended-image is-revealing">
                                        <img src="@item.Image" alt="Feature extended 01">
                                    </div>
                                    <div class="feature-extended-body is-revealing">
                                        <h3 class="mt-0">@item.Name</h3>
                                        <p class="mb-0">@item.Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <footer class="site-footer">
            <div class="container">
                <div class="site-footer-inner">
                    <div class="site-footer-top">
                        <div class="site-footer-unit">
                            <div class="site-footer-unit-inner">
                                <div class="brand footer-brand mb-24">
                                    <a href="#">
                                        <img src="/Images/svg/logo.svg" alt="Logo">
                                    </a>
                                </div>
                                <ul class="footer-social-links list-reset">
                                    <li>
                                        <a href="#">
                                            <span class="screen-reader-text">Facebook</span>
                                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M6.023 16L6 9H3V6h3V4c0-2.7 1.672-4 4.08-4 1.153 0 2.144.086 2.433.124v2.821h-1.67c-1.31 0-1.563.623-1.563 1.536V6H13l-1 3H9.28v7H6.023z" fill="#FFF" />
                                            </svg>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="screen-reader-text">Twitter</span>
                                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M16 3c-.6.3-1.2.4-1.9.5.7-.4 1.2-1 1.4-1.8-.6.4-1.3.6-2.1.8-.6-.6-1.5-1-2.4-1-1.7 0-3.2 1.5-3.2 3.3 0 .3 0 .5.1.7-2.7-.1-5.2-1.4-6.8-3.4-.3.5-.4 1-.4 1.7 0 1.1.6 2.1 1.5 2.7-.5 0-1-.2-1.5-.4C.7 7.7 1.8 9 3.3 9.3c-.3.1-.6.1-.9.1-.2 0-.4 0-.6-.1.4 1.3 1.6 2.3 3.1 2.3-1.1.9-2.5 1.4-4.1 1.4H0c1.5.9 3.2 1.5 5 1.5 6 0 9.3-5 9.3-9.3v-.4C15 4.3 15.6 3.7 16 3z" fill="#FFF" />
                                            </svg>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="fa fa-google-plus" href="#">

                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="site-footer-unit">
                            <div class="site-footer-unit-inner">
                                <div class="footer-top-links">
                                    <div class="footer-title mb-16">Ссылки для связи</div>
                                    <ul class="list-reset">
                                        <li>
                                            <a href="https://mpt.ru">Сайт</a>
                                        </li>
                                        <li>
                                            <a href="helpdo@mpt.ru">Почта для помощи</a>
                                        </li>
                                        <li>
                                            <a href="#"> 8 (926) 057-70-95 </a>
                                        </li>
                                        <li>
                                            <a href="#"> 8 (926) 057-70-95</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="site-footer-bottom">
                        <div class="footer-copyright">&copy; 2021 LimeInc, Все права защищены</div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/js/main/script.js" charset="windows-1251"></script>
    <script src="/js/main/main.min.js"></script>
    <script src="~/js/main/scroll.js"></script>
</body>
</html>